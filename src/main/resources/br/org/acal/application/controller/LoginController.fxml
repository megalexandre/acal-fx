<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="300.0" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.org.acal.application.controller.LoginController">
   <VBox alignment="CENTER" maxHeight="400.0" maxWidth="300.0" minHeight="300.0" minWidth="300.0" spacing="20.0" style="-fx-background-color: #f2f2f2; -fx-border-color: f7f7f9;">
      <children>

          <Label fx:id="welcomeText" text="Bem-vindo:" textAlignment="CENTER" />
         <VBox alignment="CENTER_LEFT">
            <children>
               <Label text="Nome:" />
               <TextField fx:id="inputName" />
            </children>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </VBox>

         <VBox>
            <children>
               <Label text="Senha:" />
               <PasswordField fx:id="inputPassword" />
            </children>
         </VBox>

         <VBox alignment="CENTER">
            <children>
               <Label fx:id="message" text="Label" />
               <Separator prefWidth="200.0">
               </Separator>
                <Button fx:id="confirmButton" maxWidth="1.7976931348623157E308" text="Entrar" />
            </children>
         </VBox>
      </children>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
   </VBox>

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
